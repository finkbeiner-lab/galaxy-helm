<tool id="cell_labeler_db_to_csv" name="Output Database To Csv">

<description>Create csv file of labeled cells from database</description>

<command interpreter="python">
<!-- No comma between arguments -->
cell_labeler_db_to_csv.py $input_db $output_csv $out_report
</command>

<inputs>
<param name="input_db" type="text" value="" label="Input database path" help="e.g. /media/robodata/name/experimentx/db_of_experimentx.db"/>
<!-- Be careful of the space between parameters, since galaxy will show nothing and indicate no error trace-->
<param name="output_csv" type="text" value="" label="Output csv path" help="e.g. /media/robodata/name/experimentx/labeled_cells_of_experimentx.csv"/>
</inputs>

<outputs>
<data name="out_report" format="txt" label=""/>
</outputs>

<help>

</help>
</tool>
