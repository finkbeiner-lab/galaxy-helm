<tool id="variety_alignments_distributed" name="Variety Alignments Distributed">

<description>Alignment Algorithms Distributed.</description>

<command interpreter="python">
variety_alignments_distributed.py $input_var_dict $alignment_algorithm $input_image_path $output_results_path $outfile
</command>

<inputs>
<param name="input_var_dict" type="data" format="data" label="Local variables dictionary (output from 'Montage')."/>
<param name="alignment_algorithm" type="select" label="Select an algorithm for alignment" help="Algorithms for alignment.">
            <option value="cross_correlation">Cross Correlation</option>
            <option value="dft">DFT</option>
            <option value="cross_correlation_dft_combo" selected='true'>Cross Correlation DFT Combo</option>
</param>
<param name="input_image_path" type="text" format="text" value="/media/robodata/your_folders" size="70" label="Enter path to images that need to be aligned. Example: MontagedImages" help="Note that RoboData/your_folders = /media/robodata/your_folders"/>
<param name="output_results_path" type="text" format="text" value="/media/robodata/your_folders" size="70" label="Enter path to output destination. Example: AlignedImages" help="Note that RoboData/your_folders = /media/robodata/your_folders"/>
</inputs>

<outputs>
<data name="outfile" type="text" format="data" label="Alignment Distributed Result "/>
</outputs>

<help>
Alignment algorithms(distributed): CrossCorrelation, DFT, and CrossCorrelation DFT Combo
</help>
</tool>