<tool id="corrupted_images_detector" name="Corrupted Images Detector" version="1.0">

<description>Detect Corrupted Images</description>

<command interpreter="python">
corrupted_images_detector.py $input_image_path $outfile
</command>

<inputs>
<param name="input_image_path" type="text" format="text" size="70" label="Enter path to images."/>
</inputs>

<outputs>
<data name="outfile" type="data" format="txt" label="Corrupted Images"/>
</outputs>

<help>
This tool is to detect corrupted images in a folder.
</help>

</tool>

